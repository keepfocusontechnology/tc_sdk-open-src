<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="tcsdk_title_text">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/tcsdk_text_account_login</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="tcsdk_button_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="tcsdk_text_desc">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">#747474</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="tcsdk_text_blue">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">#57acfb</item>
        <item name="android:textSize">15sp</item>
    </style>
    
    <style name="tcsdk_et_normal">
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
    </style>
    
        <style name="MyDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--背景透明-->
        <item name="android:windowFrame">@null</item>
        <!--边框-->
        <item name="android:windowNoTitle">true</item>
        <!--无标题-->
        <item name="android:windowIsFloating">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">true</item>
        <!--半透明-->
        <item name="android:windowContentOverlay">@null</item>
        <!--内容覆盖 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        
       
    </style>
    

</resources>